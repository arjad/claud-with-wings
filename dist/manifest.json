{
  "manifest_version": 3,
  "name": "I Notes",
  "version": "1.5",
  "description": "i Notes is a lightweight, easy-to-use extension for taking quick notes, saving developer commands",
  "permissions": [
    "storage", 
    "notifications",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "48": "assets/note.png",
    "128": "assets/note.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }

}
